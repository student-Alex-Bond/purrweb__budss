- var menuItemName = ['For Business', 'For Customers', 'Privacy Policy', 'Terms Of Use - Seller', 'Terms of Use - Sellers & Customers']
include ../button/button.pug

nav.nav
    +btn('Contact sales')(class='nav__btn-desktop')
    button(type='button').hamburger 
        span.hamburger__icon-open 
    .nav__overlay     
        image(src=require('../../images/icons/icon__close.svg') width=40 height=40).nav__img   
        +btn('Contact sales')(class='nav__btn')
        ul.nav__menu
            each val in menuItemName
                li.nav__menu_item
                    a(href="#").nav__menu_link= val
            