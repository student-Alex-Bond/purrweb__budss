include ../menu_items/menu_items.pug 
include ../button/button.pug
footer.footer
    +logo()(class='footer__logo')
    +menu()(class='footer__list')
    .footer__links 
        a(href='#').footer__link For Businnes
        a(href='#').footer__link For Customers
    .footer__btn
        +btn('Contact sales')
    .footer__stors
        a(href='#').footer__stors-link
            img(src=require('../../images/apple__store.svg')).footer__stors-img   
        a(href='#').footer__stors-link
            img(src=require('../../images/google__play.svg')).footer__stors-img  
